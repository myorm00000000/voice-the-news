<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.azrie.VoiceTheNews">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".LoginActivity"
            android:label="Voice The News"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        
        
        <activity
            android:name="com.example.azrie.VoiceTheNews.ActivityMainR"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity
            android:name="com.example.azrie.VoiceTheNews.ActivityNewsWeb"
            android:label="activity_title">
        </activity>

        <activity
            android:name="com.example.azrie.VoiceTheNews.ActivitySettingPreferance"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.example.azrie.VoiceTheNews.OfflineActivity">
        </activity>
        <activity
            android:name="com.example.azrie.VoiceTheNews.LoginWebViewActivity">
        </activity>


    </application>

</manifest>