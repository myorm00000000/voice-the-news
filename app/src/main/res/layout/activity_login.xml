<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="0dp">

    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/logo"
        android:id="@+id/login_logo"
        android:paddingTop="10dp"
        android:layout_height="100dp"
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="Voice The News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_text"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/login_logo"
        android:layout_toEndOf="@+id/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username"
            android:hint="Username"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <Button
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:text="Sign in"
            android:textColor="@color/black" />

        <TextView
            android:text="@string/urltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:id="@+id/not_user"
            android:textAlignment="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColorLink="@color/blue"            />

        <View
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp" />

        <Button
            android:text="Continue without login"
            android:layout_height="wrap_content"
            android:id="@+id/cont_button"
            android:layout_width="324dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:text="EN"
        android:id="@+id/button_language"
        android:textSize="12sp"
        android:layout_height="40dp"
        android:layout_width="64dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:foregroundGravity="right"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

</RelativeLayout>